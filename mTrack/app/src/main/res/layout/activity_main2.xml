<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nihit.mtrack.Main2Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/layout1"
        android:background="#32afe1">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/id"
            android:layout_alignParentLeft="true"
            android:text="ID"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="30dp" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/time1"
            android:layout_toRightOf="@+id/id"
            android:text="Time"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="30dp" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/bus_no"
            android:text="Route"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/time1"
            android:textSize="30dp" />


    </LinearLayout>


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@id/layout1"
        android:layout_centerHorizontal="true"
        android:listSelector="@color/primary_dark_material_light"
        android:forceHasOverlappingRendering="false"
        android:dividerHeight="3dp"
        android:divider="@color/accent_material_light" />


</RelativeLayout>
