<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    android:paddingBottom="35dp"
    android:paddingLeft="35dp"
    android:paddingRight="35dp"
    android:paddingTop="35dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.nihit.mtrack.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#c7c0c0"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:id="@+id/linear_layout_ride"
        >

            <Space
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/source"
                    android:layout_gravity="center_horizontal"
                    android:background="#ffffff"
                    android:hint="Source"
                    android:padding="5dp"
                    android:onClick="toSource" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/destination"
                android:layout_gravity="center_horizontal"
                android:background="#ffffff"
                android:hint="Destination"
                android:padding="5dp"
                android:onClick="toDestination" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/time"
                android:background="#ffffff"
                android:hint="Time"
                android:padding="5dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:id="@+id/search"
                android:layout_gravity="center_horizontal"
                android:onClick="onSearch"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

     </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linear_layout_ride"
        android:id="@+id/space1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:background="#c7c0c0"
        android:layout_below="@id/space1"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:paddingStart="70dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Stops Near Me"
            android:id="@+id/btn_stops"
            android:onClick="toMaps" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="30px"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Time Table"
            android:id="@+id/btn_tt"
            android:nestedScrollingEnabled="false"
             />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        </LinearLayout>




</RelativeLayout>
