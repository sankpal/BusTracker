<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    tools:context="com.example.nihit.mtrack.Source"
    android:paddingTop="10dp">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/listSource"
        android:divider="@android:color/holo_blue_bright"
        android:dividerHeight="1.5dp"
        android:layout_below="@+id/txt_search"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_search"
        android:textColor="#ffffff"
        android:hint="source"
        android:textColorHint="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:padding="10dp"
        android:background="@color/primary_dark_material_light"
        android:textStyle="bold" />
</RelativeLayout>
